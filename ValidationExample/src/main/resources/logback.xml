<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>C:/Users/sreehitha.c/Downloads/ValidationExample/ValidationExample/logs.log</file>
        <append>true</append>
        <encoder>
            <!-- Customize the pattern layout -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{15} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>

</configuration>
